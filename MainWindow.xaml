<Window
  x:Class="HKW.WPF.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:h="clr-namespace:HKW.WPF.Helpers"
  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:local="clr-namespace:HKW.WPF"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:t="clr-namespace:HKW.WPF.Triggers"
  Title="MainWindow"
  Width="800"
  Height="450"
  x:ClassModifier="internal"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" MinWidth="100" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <StackPanel>
      <ToggleButton h:ToggleButtonHelper.CanNotUncheckOnClick="True" Content="114514" />
      <Button Content="1">
        <i:Interaction.Triggers>
          <i:EventTrigger EventName="Click">
            <t:ScrollToControlAction ScrollViewer="{Binding ElementName=ScrollViewer_Main}" TargetControl="{Binding ElementName=Button_4}" />
          </i:EventTrigger>
        </i:Interaction.Triggers>
      </Button>
    </StackPanel>
    <ScrollViewer
      x:Name="ScrollViewer_Main"
      Grid.Column="1"
      VerticalScrollBarVisibility="Auto">
      <StackPanel
        h:StackPanelHelper.IgnoreButtomMargen="True"
        h:StackPanelHelper.IgnoreLeftMargen="True"
        h:StackPanelHelper.IgnoreRightMargen="True"
        h:StackPanelHelper.IgnoreTopMargen="True"
        h:StackPanelHelper.Margen="10">
        <Button Height="100" Content="111" />
        <Button Height="100" Content="222" />
        <Button Height="100" Content="333" />
        <Button
          x:Name="Button_4"
          Height="100"
          Content="444" />
        <Button
          x:Name="Button_5"
          Height="100"
          Content="555" />
      </StackPanel>
    </ScrollViewer>
  </Grid>
</Window>
